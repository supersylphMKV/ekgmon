extends layout

block content
  div(style="flex : 1;background-color : darkgray; padding : 8px")
    h1= title
    p Welcome to #{title}
  div(style='flex : 6; display : flex; flex-direction : column')
    table(style='width : 100%')
      tbody
        tr(style='background-color:lightblue; display : flex' id='data-header')
          th(style='flex : 5') Nama
          th(style='flex : 1') Usia
          th(style='flex : 2') Tanggal Record
          th(style='flex : 1')
    div(style='width:100%; background-color : azure; flex : 4; overflow : auto')
      table(style='width : 100%')
        tbody(id='tableData-body')
    div(style='flex : 5')